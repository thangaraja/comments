@using Microsoft.AspNet.Identity
@if (Request.IsAuthenticated)
{
    using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm", @class = "navbar-right" }))
    {
        @Html.AntiForgeryToken()
        System.Net.Mail.MailAddress addr = new System.Net.Mail.MailAddress(User.Identity.GetUserName());
        
        <ul class="nav navbar-nav navbar-right">
            <li>
                @Html.ActionLink("Hello " + addr.User + "!", "Index", "Manage", routeValues: null, htmlAttributes: new { title = "Manage", @class = "text-capitalize" })
            </li>
            <li><a href="javascript:document.getElementById('logoutForm').submit()">Log off</a></li>
        </ul>
    }
}
else
{
    <ul class="nav navbar-nav navbar-right">
        <li><button data-placement="bottom" data-html="true" data-toggle="popover" data-container="body" type="button" class="btn btn-default navbar-btn navbar-right">Login As</button></li>
    </ul>
    <div id="popover-content" class="hide">
        <div class="pull-left box">
            <div class="clearfix">
                <a href="javascript:document.getElementById('Gandalf').submit()">
                    <img src="~/Content/Images/gandalf.png" alt="..." class="img-circle pull-left">
                </a>
            </div>
